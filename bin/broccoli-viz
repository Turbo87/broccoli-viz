#!/usr/bin/env node

var viz = require('..');
var fs = require('fs');
var inputPath = process.argv[2];

if (!inputPath) {
  throw new Error('Usage: node graph path/to/broccoli-tree.json');
}

var json = JSON.parse(fs.readFileSync(inputPath).toString());

console.log(viz.dot(viz.process(json.nodes)));


